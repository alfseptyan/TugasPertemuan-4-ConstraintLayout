<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guidelinetop"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidehori1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidehori2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidehori3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidehori4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guidehori1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline1"
            android:layout_margin="10dp"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="34dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori1"
            app:layout_constraintBottom_toTopOf="@id/guidehori2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline1"
            android:layout_margin="10dp"
            android:text="7"
            android:backgroundTint="@color/white"
            android:textColor="@color/gray"
            android:textSize="34dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori2"
            app:layout_constraintBottom_toTopOf="@id/guidehori3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline1"
            android:layout_margin="10dp"
            android:text="4"
            android:backgroundTint="@color/white"
            android:textColor="@color/gray"
            android:textSize="34dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori3"
            app:layout_constraintBottom_toTopOf="@id/guidehori4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline1"
            android:layout_margin="10dp"
            android:text="1"
            android:backgroundTint="@color/white"
            android:textColor="@color/gray"
            android:textSize="34dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guidehori1"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="%"
            android:textSize="34dp"
            android:textColor="@color/orange"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/white"
            android:text="8"
            android:textColor="@color/gray"
            android:textSize="34dp"
            app:layout_constraintBottom_toTopOf="@id/guidehori2"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            app:layout_constraintTop_toTopOf="@id/guidehori1"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori2"
            app:layout_constraintBottom_toTopOf="@id/guidehori3"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="5"
            android:textSize="34dp"
            android:textColor="@color/gray"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori3"
            app:layout_constraintBottom_toTopOf="@id/guidehori4"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="2"
            android:textSize="34dp"
            android:textColor="@color/gray"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guidehori1"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="/"
            android:textSize="34dp"
            android:textColor="@color/orange"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori1"
            app:layout_constraintBottom_toTopOf="@id/guidehori2"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="9"
            android:textSize="34dp"
            android:textColor="@color/gray"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori2"
            app:layout_constraintBottom_toTopOf="@id/guidehori3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="6"
            android:textSize="34dp"
            android:textColor="@color/gray"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori3"
            app:layout_constraintBottom_toTopOf="@id/guidehori4"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="3"
            android:textSize="34dp"
            android:textColor="@color/gray"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="."
            android:textSize="34dp"
            android:textColor="@color/orange"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guidehori1"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="x"
            android:textSize="34dp"
            android:textColor="@color/orange"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori1"
            app:layout_constraintBottom_toTopOf="@id/guidehori2"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="+"
            android:textSize="34dp"
            android:textColor="@color/orange"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori2"
            app:layout_constraintBottom_toTopOf="@id/guidehori3"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="-"
            android:textSize="34dp"
            android:textColor="@color/orange"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/guidehori3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:backgroundTint="@color/orange"
            android:text="="
            android:textSize="34dp"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toBottomOf="@id/guidehori4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="0"
            android:textSize="34dp"
            android:textColor="@color/gray"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="245dp"
        android:background="@null"
        android:src="@drawable/baseline_horizontal_rule_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="15,000 - 7500"
        android:textSize="35dp"
        android:textColor="@color/gray"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="205dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="7,500"
        android:textStyle="bold"
        android:textSize="65dp"
        android:textColor="@color/gray"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="255dp">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>